<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodandnutrition.FoodNutritionActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/food_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_for_a_food"
        android:singleLine="true"
        android:layout_below="@id/main_toolbar"/>

    <ListView
        android:id="@+id/hint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_below="@id/food_search_bar">
    </ListView>

    <RelativeLayout
        android:id="@+id/food_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_below="@id/food_search_bar">

        <TextView
            android:id="@+id/food_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/raw_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_label"/>

    </RelativeLayout>
</RelativeLayout>