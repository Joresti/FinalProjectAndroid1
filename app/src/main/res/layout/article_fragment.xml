<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1e0">


    <ImageView
        android:layout_alignParentStart="true"
        android:id="@+id/frag_img"
        android:src="@drawable/pic"
        android:layout_width="550dp"
        android:layout_height="300dp"

        />

    <TextView
        android:id="@+id/frag_title"
        android:text="test"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frag_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/frag_des"
        android:text="STORY"
        android:layout_below="@+id/frag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="#efeff5"
        />

    <Button
        android:id="@+id/frag_link"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>


    <Button
        android:id="@+id/saveStory"
        android:text="@string/cbcFragSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/deleteStory"
        android:visibility="invisible"
        android:text="@string/cbcFragDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>