<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".octranspo.BusStops">

    <ListView
        android:id="@+id/busStopsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/editTextBusStops"
        android:layout_marginStart="0dp" />

    <Button
        android:id="@+id/busStopsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busStopsListView"
        android:layout_toStartOf="@+id/editTextBusStops"
        android:text="@string/busStopsButtonString" />

    <EditText
        android:id="@+id/editTextBusStops"
        android:layout_width="250dp"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:hint="@string/editTextBusStopsHint"/>


</RelativeLayout>